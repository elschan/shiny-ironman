<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-8">
          <!-- POST -->
          <div class="post">
                  <!-- acc section -->
                  <div class="accsection">
                      <div class="topwrap">

                          <div class="userinfo pull-left">
                          </div>

                          <div class="posttext pull-left">
                            <h1>Create a Post</h1>
                              <%= form_for @post do |f| %>
                                <p><%= f.label :title %><br />
                                <%= f.text_field :title %><br>
                               
                                <p><%= f.label "Link (optional)" %><br />
                                <%= f.text_field :url %><br>
                               
                               <p><%= f.label "Description" %><br />
                                <%= f.text_area :text %><br>

                               <p><%= f.label "Tag this post (separated by spaces)" %><br />                               
                                <%= f.text_field :tag_list %>  
                               <br>
                                <%= f.submit class: "btn btn-primary" %>
                              <% end %>

                            <!-- render "devise/shared/links" -->
                            <!-- Took out devise links because it seems none of them are relevant here -->

                          </div>
                          <div class="clearfix"></div>
                      </div>
                  </div><!-- acc section END -->
                </div>
            </div>
        </div>

