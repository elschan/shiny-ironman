<div id="hero">

  <div class="row vertical-align">
   
    <% if @member.nil? || @member.username.nil? %>

      <img src="/s-logo.png" class="logo"/>
    <% else %>
      <div class="col-md-8 col-lg-8 col-lg-offset-2 col-md-offset-2">
        <div class="hero-content">

<!-- NAME AND ABOUT ME -->

          <div class="name-about">
            <div id="name">
              <%= @member.fullname %>
            </div>
            <div id="username">
              <%= @member.username %>

            </div>
            <div id="blurb">
              <%= @member.blurb %> 
            </div>
          </div>
<!-- /// NAME AND ABOUT ME -->

<!-- STATS -->
          <div class="stats">
              <div class="col-md-4 col-lg-4 col-md-offset-2 col-lg-offset-2">
                <table>
                  <tr>
                    <td><i class="fa fa-star-o fa-2x"> </td>
                    <td><%= @member.reputation ? @member.reputation : 0 %></td>
                    <td>Reputation</td>

                  </tr>
                  <tr>
                    <td><i class="fa fa-coffee fa-2x"></td>
                    <td><%= @member.coffeepoints %></td>
                    <td>Coffees</td>
                  </tr>
                </table>
              </div>
          </div>
<!-- /// STATS -->

<!-- COFFEEMEET -->
          <div class="col-md-4 col-lg-4">

              <% if @member.open_to_irl %>
                <div class="coffee-invite">
                  <div id="open-to-irl"> Up for coffee IRL in <strong><%= @member.location %></strong> </div>
                  <div id="fave-coffee"> Fave coffee drink: <%= @member.fave_coffee %> </div>
                  <% if current_member %>
                    <% if current_member != @member %>
                      <button type="button" class="btn btn-hero btn-pad-top" data-toggle="modal" data-target="#myModal">INVITE FOR COFFEE</button>
                    <% end %>
                  <% else %>
                    <%= button_to "INVITE FOR COFFEE", new_member_session_path, class: "btn btn-hero btn-pad-top" %>
                  <% end %>
                 </div>
              <% else %>
                <p> Not open to coffee IRL </p>
              <% end %>
              <% if current_member == @member %>
                <p><%= link_to "Edit Profile", "#myModaleditMember", "data-toggle" => "modal" %></p>
              <% end %>
          </div>
<!-- /// COFFEEMEET -->

        </div>
      <% end %>
    </div>
  </div>
</div>