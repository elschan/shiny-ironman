<!DOCTYPE html>
<html>
  <head>
    <title>ShinyIronman</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
       <div class="headernav">
          <div class="container">
              <div class="row">

                  <div class="col-lg-4 search hidden-xs hidden-sm col-md-3">
                      <div class="wrap">

                          <form action='/posts' method="get" class="form">
                              <div class="pull-left txt"><input type="text" class="form-control" name="search" placeholder="Search by tag"></div>
                              <div class="pull-right"><button class="btn btn-default" type="button"><i class="fa fa-search"></i></button></div>
                              <div class="clearfix"></div>
                          </form>
                      </div>
                  </div>
                  <div class="col-lg-4 col-xs-12 col-sm-5 col-md-4 avt">
                      <div class="stnt pull-left">
                          <!-- <form action="03_new_topic.html" method="post" class="form"> -->
                            <%= button_to 'New Post', new_post_path, :class=> "btn btn-primary", :method => :get %>

                              <!-- <button class="btn btn-primary">Start New Topic</button>
                          </form> -->
                      </div>
                      <div class="stnt pull-left">

                      <%= button_to 'All Posts', '/', :class=> "btn btn-primary", :method => :get %>
</div>

                      <% if member_signed_in? %>
                        <div class="avatar pull-left dropdown">
                            <a data-toggle="dropdown" href="#"><i class="fa fa-user fa-3x"></i></a> <b class="caret"></b>
                            <ul class="dropdown-menu" role="menu">

                                <li role="presentation">
                                  <%= link_to "My Profile", member_path(current_member.id) %>
                                </li>
                                <li role="presentation">
                                  <%= link_to('Logout', destroy_member_session_path, :method => :delete) %>
                                </li>
                                <% if current_member.admin %>

                                  <li role="presentation">
                                    <%= link_to('Admin panel', members_path, :method => :get) %>
                                  </li>
                                <% end %>
                            </ul>
                        </div>
                      <% else %>

                      <!-- If not signed in, should not see avatar or drop-down. Instead:
                        Login
                        Get Invite? -->

                        <%= link_to('Login', new_member_session_path)  %>
                      <% end %>

                      <div class="clearfix"></div>
                  </div>
              </div>
          </div>
      </div>
    <div class="content">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      <script>
        window.sr = new scrollReveal();
      </script>
    </div>
  </body>
</html>
