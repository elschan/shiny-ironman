<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-4">
          <!-- POST -->
          <div class="post">
            <!-- acc section -->
            <div class="accsection">
              <div class="topwrap">
                 <div class="userinfo pull-left"></div>

                  <div class="posttext pull-left">
                    <h1>Want to shine?</h1><br>
                    <div class="form-group" >
                    <%=simple_form_for @signup do |f| %>
                      <%= f.input :application, as: :text, :label => false,  :class=> 'form-control', :placeholder => 'Tell us about yourself or why you want to join the shine code. We promise to review it asap!', :input_html => {rows: 5} %><br>
                     <%= f.email_field :email ,:class=> 'form-control', :placeholder => 'What email should we send the invite to?', :style => 'text-align: center' %><br>
                      <%= f.submit "Apply!", class: "btn btn-primary btn-pad-top" %>
                    <% end %>
                  </div>
                 </div>
                    <div class="clearfix"></div>
                </div>
            </div><!-- acc section END -->
          </div>
      </div>
  </div>
